"""
#funcoes e procedimentos
def convertf(tempc):
    tempf = (tempc * 9/5) + 32
    return tempf

def convertk(tempc):
    tempk = tempc + 273
    return tempk

tempc = float(input("Digite a temperatura em Celsius: "))
def main():
    while True:
        perg = input('Digite 1 - Fahrenheit\n'
                     'Digite 2 - Kelvin\n'
                     'Digite 3 - Reset\n'
                     'Digite 4 - Sair\n')

        if perg == "1":
            tempf = convertf(tempc)
            print(f'A temperatura {tempc} em Fahrenheit é {tempf}')
        elif perg == "2":
            tempk = convertk(tempc)
            print(f'A temperatura {tempc} em Kelvin é {tempk}')
        elif perg == "3":
            tempc = float(input("Digite a nova temperatura em Celsius: "))
        elif perg == "4":
            break
        else:
            print("Opção inválida. Por favor, escolha 1, 2, 3 ou 4.")

if __name__ == "__main__":
    main()
"""
