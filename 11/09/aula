#funcoes e procedimentos
def convertf(tempc):
    tempf = (tempc * 9/5) + 32
    return tempf

def convertk(tempc):
    tempk = (tempc + 273)
    return tempk

def main ():
    while True:
        tempc = float(input("digite a temperaura em celcius :"))
        perg = input(int('Digite 1 - Farenheit\n'
                         'Digite 2 - Celcius\n'
                         'Digite 3 - Sair'))

        if perg == 1:
            tempk = convertk(tempc)
            print (f'A temperatura {tempc} em kelvin é {tempk}')
        elif perg == 2:
            tempf = convertf(tempc)
            print (f'A temperatura {tempc} em farenheiht é {tempf}')
        else:
            break
