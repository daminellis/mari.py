#exemplo2
def fun_lmb():
    num = float(input('Digite um número: ')) 
    lambdas = [
        lambda x: x ** 2,
        lambda x: x ** 3,
        lambda x: x ** 4,
    ]
    
    for lmb in lambdas:
        resultado = lmb(num)
        print(f"Resultado: {resultado}")

fun_lmb()
